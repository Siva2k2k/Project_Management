# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Client URL (Heroku app URL)
CLIENT_URL=https://your-app-name.herokuapp.com
HEROKU_APP_URL=https://your-app-name.herokuapp.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Microsoft SSO (Optional)
MS_CLIENT_ID=your_microsoft_client_id
MS_CLIENT_SECRET=your_microsoft_client_secret
MS_TENANT_ID=your_microsoft_tenant_id
MS_REDIRECT_URI=https://your-app-name.herokuapp.com/api/v1/auth/microsoft/callback
